{
  "private": true,
  "name": "react-pdf-highlighter-monorepo",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "npx lerna bootstrap --hoist",
    "types": "npx lerna exec flow-typed \"install -i dev -l ../../flow-typed\"",
    "start": "concurrently --kill-others 'npm run \"start:example\"' 'npm run \"start:react-pdf-highlighter\"'",
    "start:example": "wait-on ./packages/react-pdf-highlighter/build && npx lerna run start --scope=example",
    "start:react-pdf-highlighter": "npx lerna run start --scope=react-pdf-highlighter",
    "test": "npm run flow && npx lerna run test",
    "build": "npx lerna run build",
    "clean": "npx lerna clean -y && npx lerna run clean",
    "flow": "npx lerna exec flow check",
    "format": "prettier --write 'packages/**/*.js'",
    "format:check": "prettier --check 'packages/**/*.js'"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "gh-pages": "^3.1.0",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "wait-on": "^5.1.0"
  },
  "engines": {
    "npm": "<7"
  }
}
